 <div id="content">
<%= render 'common/header' %>
<h1>This is where we will build the workouts out of.</h1>

<table style="width:60%">
  <tr>
   <th colspan="2">Week <%= @progression.weeks %></th>
    <th colspan="1">Day <%= @progression.day %></th>
  </tr>
  <% if @progression.day%2 ==0 %>
  <tr>
    <th>Squats</th>
    <th>Overhead Press</th>
    <th>Deadlift</th> 
  </tr>
  <tr>
    <td><%= @progression.squats %></td>
    <td><%= @progression.overheadpress %></td> 
    <td><%= @progression.deadlift %></td> 
  </tr>
</table>
  <% elsif @progression.day%2 ==1 %>
  <tr>
    <th>Squats</th>
    <th>Benchpress</th>
    <th>Power Clean</th> 
  </tr>
  <tr>
    <td><%= @progression.squats %></td>
    <td><%= @progression.benchpress %></td> 
    <td><%= @progression.powerclean %></td> 
  </tr>
</table>
 <% end %>
 

<%= form_for :progression, url: increment_progression_path do %>
    <input type="submit" value="next">
<% end %>

<%= form_for :progression, url: decrement_progression_path do %>
    <input type="submit" value="back">
<% end %>
<%= form_for :progression, url: restart_progression_path do %>
    <input type="submit" value="restart">
<% end %>
